<div class="card mb-4">
    <div class="card-header">
        <i class="fas fa-table mr-1"></i>
        Informations trouvées:
    </div>
    <div class="card-body">
        <div class="container mt-3">
            <div class="media border p-3">
                <img src="<%=user.profile_image_url_https%>" alt="invalid image" class="mr-3 mt-3 rounded-circle" style="width:60px;">
                <div class="media-body">
                    <h4><%=user.name%><% if(user.verified == "true"){ %> <i class="fas fa-check-circle text-success"></i><%}else{%> <i class="fas fa-check-circle text-secondary"></i><%}%></h4>
                    <pre>alias<em> <%=user.screen_name%></em></pre>
                   
                    <ul>
                        <li>
                            ID: <%=user.id_str%>
                        </li>
                        <li>
                            Followers: <%=user.followers_count%>
                        </li>
                        <li>
                            Amis: <%= user.friends_count %>
                        </li>
                        <li>
                            Membre depuis le <%= user.created_at.split(" ")[2]%> <%= user.created_at.split(" ")[1]%> <%= user.created_at.split(" ")[5]%> 
                        </li>
                        <li>
                            hashtags utilisés: <span class="tooltipHashtag"><%= hashtagList %></span>
                        </li>
                    </ul>
                    <p></p>
                </div>
            </div>
        </div>
            
        </p>
    </div>
</div>