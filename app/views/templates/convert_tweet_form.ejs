<div class="card mb-4">
    <form action="/convert/" method="POST" class="form-inline">
        <div class="card-header w-100 text-center">
            <label for="hashtag" class="mb-1">Indiquer le text du tweet:</label>
            <% if (tweet != null){%>
                <textarea class="w-100" rows="3" maxlength="280" class="form-control" name="tweet" id="hashtag"><%=oldTweet%></textarea>
            <%}else{%>
                <textarea class="w-100" rows="3" maxlength="280" class="form-control" name="tweet" id="hashtag"></textarea>
            <%}%> 
        
            <button class="btn btn-success" type="submit">Chercher</button>
        </div>
    </form>
</div>
