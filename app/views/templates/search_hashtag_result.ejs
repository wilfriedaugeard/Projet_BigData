<div class="card mb-4">
    <div class="card-header">
        <i class="fas fa-table mr-1"></i>
        Résultats de la recherche pour: <span class="tooltipHashtag">#<%=word%></span>
    </div>
    <div class="card-body">
        <%if (list.length == 0){%>
            Aucune donnée pour ce hashtag.
        <%}else{%>  
        <div class="table-responsive">
            <table class="table table-bordered text-center align-center dataTable"  width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Hashtag</th>
                        <th>Nombre de fois utilisé</th>
                        <th>Fréquence d'utilisation</th>
                    </tr>
                </thead>
                <tbody>
                    <% for(let i=0; i<list.length; i++){%> 
                    <tr>
                        <td><%= list[i][0]%> </td>
                        <td><%= list[i][1]%> </td>
                        <td>
                            <div class="sparkline-bar-stats1">
                                <%= list[i][2]%> 
                            </div>
                        </td>
                    </tr>
                    <%}%>   
                </tbody>
            </table>
        </div>
        <%}%>
    </div>
</div>